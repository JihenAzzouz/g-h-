{% extends 'MyAppUserBundle:experience:layout.html.twig' %}
{% block body %}
    <link href="{{ asset('input/css/fileinput.css') }}" media="all" rel="stylesheet" type="text/css"/>
    <script src="{{ asset('bundles/main/jquery.min.js') }}"></script>
    <script src="{{ asset('input/js/plugins/sortable.js') }}" type="text/javascript"></script>
    <script src="{{ asset('input/js/fileinput.js') }}" type="text/javascript"></script>
    <style>.loading {
        float:right;
        width:30px;
        height:30px;
        background:url({{ asset('bundles/img/arrows32.gif') }});
    }</style>
    <nav class="breadcrumbs">
        <div class="container">
            <ul>
                <li class="breadcrumbs__item"><a href="{{ url('my_app_user_homepage') }}" class="breadcrumbs__link">Accueil</a>
                </li>
                <li class="breadcrumbs__item"><a href="{{ url('experiences_affichage') }}" class="breadcrumbs__link">My Experiences</a>
                </li>
                <li class="breadcrumbs__item"><a href="{{ url('experiences_ajouter') }}" class="breadcrumbs__link">Ajouter Experiences</a>
                </li>
            </ul>
        </div>
    </nav>
 <div class="center" style="background-image: url('{{ asset('bundles/img/1.jpg') }}');background-size: cover;">
    <div class="container">
        <div class="row">
            <div class="site__main">
                <header class="site__header">
                    <h1 class="site__title">Welcome</h1>
                    <h2 class="site__headline">Add Experiences</h2>
                </header>


                {{ form_start(ff,{'attr':{'enctype':'multipart/form-data'}}) }}
                <div class="form-group">
                    <div class="col-sm-12 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-bars" aria-hidden="true"></i></span>
                            {{ form_widget(ff.titre,{'attr':{'class':'form-control' , 'placeholder':"titre"  }}) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12 inputGroupContainer">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-flag"></i></span>
                            {{ form_widget(ff.idPays) }}
                        </div>
                    </div>
                </div>
                <div class="form-group" >
                    <div class="col-sm-12 inputGroupContainer">
                        <div id="ll"></div>
                        <div class="input-group" id="lo">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-map-marker"></i></span>
                            {{ form_widget(ff.idVille) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12 inputGroupContainer">
                            {{ form_widget(ff.description,{'attr':{'class':'form-control' , 'placeholder':"description"}}) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12 inputGroupContainer">
                        <div >
                            {{ form_widget(ff.file,{'attr':{'class':'file' ,'id':'file-0c'  }}) }}
                            {{ form_widget(ff.file1,{'attr':{'class':'file' ,'id':'file-0c'  }}) }}
                            {{ form_widget(ff.file2,{'attr':{'class':'file' ,'id':'file-0c'  }}) }}
                            {{ form_widget(ff.file3,{'attr':{'class':'file'}}) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-12 inputGroupContainer">
                        <div >
                            {{ form_widget(ff.file4,{'attr':{'class':'file'}}) }}
                        </div>
                    </div>
                </div>
                <div class="form-group sub">
                    <div class="col-sm-12 inputGroupContainer">
                        <button type="submit" name="name" class="btn--action">ADD</button>
                    </div>
                </div>
                {{ form_end(ff) }}
            </div>
        </div></div></div>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script src="{{ asset('bundles/main/jquery.min.js') }}"></script>
    <script src="{{ asset('bundles/main/m.js') }}"></script>
    <script>
        $(".file").fileinput({
            showUpload: false,
            showCaption: false,
            browseClass: "input-group-btn",
            fileType: "any",
            previewFileIcon: "<i class='glyphicon glyphicon-king'></i>",
            overwriteInitial: true,
            initialPreviewAsData: true,
            initialPreview: [
                "http://lorempixel.com/1920/1080/transport/1",
            ],
            initialPreviewConfig: [
                {caption: "transport-1.jpg", size: 329892, width: "120px", url: "{$url}", key: 1},
            ],
        });
    </script>
{% endblock  %}