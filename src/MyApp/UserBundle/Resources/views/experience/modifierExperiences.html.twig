{% extends 'MyAppUserBundle:experience:layout.html.twig' %}


{% block body %}
    <link href="{{ asset('input/css/fileinput.css') }}" media="all" rel="stylesheet" type="text/css"/>
    <link href="{{ asset('input/themes/explorer/theme.css') }}" media="all" rel="stylesheet" type="text/css"/>
    <script src="{{ asset('bundles/main/jquery.min.js') }}"></script>

    <link href="{{ asset('input/css/fileinput.css') }}" media="all" rel="stylesheet" type="text/css"/>
    <script src="{{ asset('input/js/plugins/sortable.js') }}" type="text/javascript"></script>
    <script src="{{ asset('input/js/fileinput.js') }}" type="text/javascript"></script>
    <script src="{{ asset('input/themes/explorer/theme.js') }}" type="text/javascript"></script>

    <style>.loading {
            float:right;
            width:30px;
            height:30px;

            background:url({{ asset('bundles/img/arrows32.gif') }});
        }</style>
    <nav class="breadcrumbs">
        <div class="container">
            <ul>
                <li class="breadcrumbs__item"><a href="{{ url('my_app_user_homepage') }}" class="breadcrumbs__link">Home</a>
                </li>
                <li class="breadcrumbs__item"><a href="{{ url('experiences_affichage') }}" class="breadcrumbs__link">My Experiences</a>
                </li>
                <li class="breadcrumbs__item"><a href="#" class="breadcrumbs__link">Edit Experiences</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="center" style="background-image: url('{{ asset('bundles/img/1.jpg') }}');background-size: cover;">
        <div class="container">
            <div class="row">
                <div class="site__main">
                    <header class="site__header">
                        <h1 class="site__title">Welcome !</h1>
                        <h2 class="site__headline">Edit experience</h2>
                    </header>
                    {{ form_start(ff,{'attr':{'enctype':'multipart/form-data'}}) }}

                    <div class="form-group">
                        <div class="col-sm-12 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-bars" aria-hidden="true"></i></span>
                                {{ form_widget(ff.titre,{'attr':{'class':'form-control' , 'placeholder':"titre"  }}) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12 inputGroupContainer">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-flag"></i></span>
                                {{ form_widget(ff.idPays) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group" >
                        <div class="col-sm-12 inputGroupContainer">
                            <div id="ll"></div>
                            <div class="input-group" id="lo">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-map-marker"></i></span>
                                {{ form_widget(ff.idVille) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12 inputGroupContainer">
                            {{ form_widget(ff.description,{'attr':{'class':'form-control' , 'placeholder':"description"}}) }}
                        </div>
                    </div>

                    <div class="form-group sub">
                        <div class="col-sm-12 inputGroupContainer">
                            <button type="submit" name="name" class="btn--action">EDIT</button>
                        </div>
                    </div>
                    {{ form_end(ff) }}
                </div>
            </div></div></div>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script src="{{ asset('bundles/main/m.js') }}"></script>
    <script src="{{ asset('bundles/main/jquery.min.js') }}"></script>
{% endblock  %}