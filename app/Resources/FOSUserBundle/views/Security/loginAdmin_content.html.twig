{% extends ':admin:login.html.twig' %}
{% block admin_login %}
<form action="{{ path("fos_user_security_check") }}" method="post" class="form-material m-b-1">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="form-group"> <input type="text" name="_username" id="username" class="form-control" placeholder="Nom d'utilisateur"  value="{{ last_username }}" required="required"> </div>
    <div class="form-group"> <input type="password" name="_password" id="password" tabindex="2" class="form-control" placeholder="Mot de passe" required="required"> </div>
    <div class="p-x-2 form-group m-b-0"> <input type="submit" name="_submit" id="_submit" tabindex="4" class="btn btn-purple btn-block text-uppercase" value="{{ 'security.login.submit' }}"> </div>
</form>
{% endblock admin_login %}